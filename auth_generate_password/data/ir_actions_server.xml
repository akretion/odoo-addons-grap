<openerp>
    <data>
        <record id="action_generate_password" model="ir.actions.server">
            <field name="name">Generate Password</field>
            <field name="model_id" ref="model_res_users"/>
            <field name="state">code</field>
            <field name="code">action = obj.generate_password(context=context)</field>
        </record>

        <record id="ir_values_generate_password" model="ir.values">
            <field name="key2" eval="'client_action_multi'"/>
            <field name="model" eval="'res.users'"/>
            <field name="name">Generate Password</field>
            <field eval="'ir.actions.server,%d'%action_generate_password" name="value"/>
        </record>

    </data>
</openerp>
