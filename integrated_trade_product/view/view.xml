<openerp>
    <data>

<!-- Define: product.integrated.trade.catalog -->
        <record id="view_product_integrated_trade_catalog_tree" model="ir.ui.view">
            <field name="model">product.integrated.trade.catalog</field>
            <field name="arch" type="xml">
                <tree string="Integrated Trade - Products Catalog">
                    <field name="product_tmpl_id" readonly="1"/>
                    <field name="supplier_product_default_code"/>
                    <field name="supplier_product_name"/>
                    <field name="supplier_partner_name"/>
                    <field name="supplier_partner_id" invisible="1"/>
                    <field name="supplier_product_id" invisible="1"/>
                    <field name="customer_company_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_product_integrated_trade_catalog_search" model="ir.ui.view">
            <field name="model">product.integrated.trade.catalog</field>
            <field name="arch" type="xml">
                <search string="Integrated Trade - Products Catalog">
                   <field name="supplier_product_name" string="Supplier Product" filter_domain="['|',('supplier_product_name','ilike',self),('supplier_product_default_code','ilike',self)]"/>
                    <group expand="0" string="Group by...">
                        <filter string="Partner" domain="[]" context="{'group_by' : 'supplier_partner_id'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</openerp>
