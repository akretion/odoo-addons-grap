<openerp>
<data>


<record id="view_inventory_form" model="ir.ui.view">
    <field name="name">stock.inventory.valuation.related.inventory.form</field>
    <field name="model">stock.inventory</field>
    <field name="inherit_id" ref="stock.view_inventory_form" />
    <field name="arch" type="xml">
        <field name="date" position="after">
            <field name="company_currency_id" invisible="1"/>
            <field name="valuation" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
        </field>
        <xpath expr="//field[@name='line_ids']/tree/field[@name='product_qty']" position="after">
            <field name="standard_price"/>
            <field name="valuation"/>
        </xpath>
    </field>
</record>

</data>
</openerp>
